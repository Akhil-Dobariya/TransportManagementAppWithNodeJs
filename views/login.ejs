<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width,initial-scale=1.0" />
        <title>Log In</title>
        <link rel="stylesheet" href="./css/bootstrap.min.css">
        <script src="./js/jquery.min.js"></script>
    </head>
    <body>
        <div class="container">
            
            <form action="/auth/login" method="post">
                <div class="form-group row" style="margin-top:100px;">
                    <div class="col-4 offset-4">
                        <input class="form-control" type="text" id="email" name="email" placeholder="Email" />
                    </div>
                </div>
                <div class="form-group row" style="margin-top:15px;">
                    <div class="col-md-4 offset-4">
                        <input class="form-control" type="password" id="password" name="password" placeholder="Password" />
                    </div>
                </div>
                <div class="form-group row" style="margin-top:20px;">
                    <div class="col-md-4 offset-4">
                        <button class="form-control btn btn-primary" type="submit" id="login" name="login">Log In</button>
                    </div>
                </div>
            </form>
            <div class="form-group row">
                <div class="col-md-4 offset-4" style="margin-top:50px;">
                    <form action="/register" method="get">
                        <button class="form-control btn btn-secondary" type="submit" id="register" name="register">Register Here</button>
                    </form>
                </div>
            </div>
        </div>
    </body>
</html>